extends layout 

block content 
    .w3-container.w3-teal 
        header .w3-container.w3-teal 
            h1 
                span #{title}
                |
                a.w3-btn.w3-grey(href='/pessoas/add') +
        .w3-container 
            table.w3-table-all 
                tr 
                    th BI/CC 
                    th nome 
                    th Actions 
                each item in pessoas 
                    tr 
                        td= item._id 
                        td 
                            a(href='/pessoas/${item._id}')= item.nome 
                        td 
                            span [
                                a(href='/compositores/edit/${item._id}') Edit
                            span ]
                            span [
                                a(href='/compositores/delete/${item._id}') Delete
                            span ]
                    