extends layout 

block content 
    .w3-card-4 
        header.w3-container.w3-teal 
            h1 #{title}
                a.w3-btn.w3-round.w3-grey(href="/periodos/add") + 
        .w3-container 
            table.w3-table-all 
                tr 
                    th Periodo 
                    th Actions 
                each periodo in Periodos 
                    tr 
                        td 
                            a(href=`/periodos/${periodo.nome}`)= periodo.nome
                        td 
                            span 
                                a(href=`/periodos/delete/${periodo.id}`) Delete 